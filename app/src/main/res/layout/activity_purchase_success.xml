<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">

    <include layout="@layout/head_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp360"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/dp32"
        android:layout_marginLeft="@dimen/dp32"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/buy_success"/>

        <TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp32"
            android:textColor="@color/color_E20000"
            android:text="订单号:12345678987654321"
            android:layout_marginTop="@dimen/dp32"/>

        <TextView
            android:id="@+id/order_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp32"
            android:textColor="@color/color_E20000"
            android:text="购买成功"
            android:layout_marginTop="@dimen/dp20"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:background="@color/color_e7e7e7"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:gravity="center_horizontal">


        <TextView
            android:id="@+id/watch_order"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp34"
            android:text="查看订单"
            android:textSize="@dimen/dp25"
            android:textColor="@color/color_333333"
            android:layout_alignParentBottom="true" />

        <View
            android:id="@+id/divide_line"
            android:layout_width="@dimen/dp1"
            android:layout_height="@dimen/dp34"
            android:background="@color/color_333333"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/watch_order"
            android:layout_marginLeft="@dimen/dp20"/>

        <TextView
            android:id="@+id/choose_course"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp34"
            android:text="继续选课"
            android:textSize="@dimen/dp25"
            android:textColor="@color/color_333333"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/divide_line"
            android:layout_marginLeft="@dimen/dp20"/>
    </RelativeLayout>



</LinearLayout>
