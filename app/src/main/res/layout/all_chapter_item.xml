<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/combinedshape"/>

    <TextView
        android:id="@+id/course_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp48"
        android:textSize="@dimen/dp25"
        android:textColor="@color/color_333333"
        android:text="第一讲"/>

    <TextView
        android:id="@+id/course_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp32"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/dp25"
        android:text="周一李老师"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp32"
        android:layout_marginBottom="@dimen/dp32"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/go_to_room_layout"
            android:layout_width="@dimen/dp238"
            android:layout_height="@dimen/dp62"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/button_bg"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/go_to_room_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入教室"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dp30" />

            <ImageView
                android:id="@+id/go_to_room_img"
                android:layout_width="@dimen/dp42"
                android:layout_height="@dimen/dp42"
                android:layout_marginLeft="@dimen/dp16"
                android:src="@mipmap/icon_studio_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/submit_work"
            android:layout_width="@dimen/dp238"
            android:layout_height="@dimen/dp62"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/submit_homework"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp64">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提交作业"
                android:textColor="@color/color_E20000"
                android:textSize="@dimen/dp30" />

            <ImageView
                android:layout_width="@dimen/dp42"
                android:layout_height="@dimen/dp42"
                android:layout_marginLeft="@dimen/dp16"
                android:src="@mipmap/icon_submit" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
