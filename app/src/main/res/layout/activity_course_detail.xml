<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/head_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/sign_up_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp84"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/hlg_bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/color_f6f6f6"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/original_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="原价￥80元"
                        android:textSize="@dimen/dp24"
                        android:textColor="@color/color_999999"
                        android:layout_marginLeft="@dimen/dp32"/>

                    <TextView
                        android:id="@+id/current_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥99"
                        android:textSize="@dimen/dp40"
                        android:textColor="@color/color_E20000"
                        android:layout_marginLeft="@dimen/dp8"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sign_up_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_E20000"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/sign_up_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dp40"
                        android:textColor="@color/color_ffffff"
                        android:text="立即报名"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/hlg_bottom_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="诊断后报名"
                android:textSize="@dimen/dp36"
                android:textColor="@color/color_ffffff"
                android:background="@color/color_E20000"
                android:gravity="center"
                android:visibility="gone"/>

        </RelativeLayout>

        <ScrollView
            android:id="@+id/course_detail_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/sign_up_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:layout_marginTop="@dimen/dp50"
                    android:layout_marginBottom="@dimen/dp32"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp42"
                        android:background="@color/color_E20000"
                        android:layout_marginLeft="@dimen/dp32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:text="直播目标班（人教版）"
                        android:layout_marginLeft="@dimen/dp16"
                        android:textSize="@dimen/dp34"
                        android:textColor="@color/color_333333"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp460"
                    android:layout_marginLeft="@dimen/dp32"
                    android:layout_marginRight="@dimen/dp32"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    app:cardCornerRadius="@dimen/dp10"
                    app:cardElevation="@dimen/dp10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp256"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="难度"
                                        android:textSize="@dimen/dp30"
                                        android:textColor="@color/color_333333"/>

                                    <ImageView
                                        android:id="@+id/star1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/reekstar"
                                        android:layout_marginLeft="@dimen/dp8"/>

                                    <ImageView
                                        android:id="@+id/star2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/reekstar"
                                        android:layout_marginLeft="@dimen/dp8"/>

                                    <ImageView
                                        android:id="@+id/star3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/reekstar"
                                        android:layout_marginLeft="@dimen/dp8"/>

                                    <ImageView
                                        android:id="@+id/star4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/reekstar"
                                        android:layout_marginLeft="@dimen/dp8"/>

                                    <ImageView
                                        android:id="@+id/star5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/reekstar"
                                        android:layout_marginLeft="@dimen/dp8"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="突破难点，冲刺高分"
                                    android:textSize="@dimen/dp30"
                                    android:textColor="@color/color_333333"
                                    android:ellipsize="end"
                                    android:maxLines="3"
                                    android:layout_marginTop="@dimen/dp30"/>

                            </LinearLayout>

                            <View
                                android:layout_width="@dimen/dp1"
                                android:layout_height="@dimen/dp144"
                                android:background="@color/color_e7e7e7"
                                android:layout_gravity="center_vertical"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp35"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="@dimen/dp20">

                                    <ImageView
                                        android:layout_width="@dimen/dp35"
                                        android:layout_height="@dimen/dp35"
                                        android:src="@drawable/home_date"/>

                                    <TextView
                                        android:id="@+id/course_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/color_333333"
                                        android:textSize="@dimen/dp20"
                                        android:layout_marginLeft="@dimen/dp16"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp35"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="@dimen/dp20"
                                    android:layout_marginTop="@dimen/dp20">

                                    <ImageView
                                        android:layout_width="@dimen/dp35"
                                        android:layout_height="@dimen/dp35"
                                        android:src="@drawable/home_time"/>

                                    <TextView
                                        android:id="@+id/course_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/color_333333"
                                        android:textSize="@dimen/dp20"
                                        android:text="time"
                                        android:layout_marginLeft="@dimen/dp16"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp35"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="@dimen/dp20"
                                    android:layout_marginTop="@dimen/dp20">

                                    <ImageView
                                        android:layout_width="@dimen/dp35"
                                        android:layout_height="@dimen/dp35"
                                        android:src="@drawable/home_course"/>

                                    <TextView
                                        android:id="@+id/chapter_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/color_333333"
                                        android:textSize="@dimen/dp20"
                                        android:layout_marginLeft="@dimen/dp16"
                                        android:text="course"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp204"
                            android:orientation="horizontal"
                            android:background="@color/color_f6f6f6"
                            android:paddingBottom="@dimen/dp44">

                            <ImageView
                                android:id="@+id/teacher_head"
                                android:layout_width="@dimen/dp140"
                                android:layout_height="@dimen/dp140"
                                android:background="@drawable/teacher_bg"
                                android:padding="@dimen/dp5"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dp32"/>

                            <TextView
                                android:id="@+id/teacher_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp50"
                                android:layout_gravity="center_vertical"
                                android:text="王立峰"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp50"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical">

                                <TextView
                                    android:id="@+id/intro1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="北京大学毕业"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginRight="@dimen/dp4"/>
                                <TextView
                                    android:id="@+id/intro2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="北京大学毕业"
                                    android:maxLines="1"
                                    android:ellipsize="end"

                                    android:layout_marginRight="@dimen/dp4"/>
                                <TextView
                                    android:id="@+id/intro3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="北京大学毕业"
                                    android:maxLines="1"
                                    android:ellipsize="end"
                                    android:layout_marginRight="@dimen/dp4"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp32"
                    android:layout_marginRight="@dimen/dp32"
                    android:layout_marginTop="@dimen/dp50">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp70"
                                android:layout_height="@dimen/dp70"
                                android:src="@mipmap/icon1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dp24"
                                android:textColor="@color/color_333333"
                                android:layout_marginTop="@dimen/dp20"
                                android:text="课后辅导"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp70"
                                android:layout_height="@dimen/dp70"
                                android:src="@mipmap/icon2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dp24"
                                android:textColor="@color/color_333333"
                                android:layout_marginTop="@dimen/dp20"
                                android:text="家庭作业"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp70"
                                android:layout_height="@dimen/dp70"
                                android:src="@mipmap/icon3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dp24"
                                android:textColor="@color/color_333333"
                                android:layout_marginTop="@dimen/dp20"
                                android:text="独家教材"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/dp30">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp70"
                                android:layout_height="@dimen/dp70"
                                android:src="@mipmap/icon4"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dp24"
                                android:textColor="@color/color_333333"
                                android:layout_marginTop="@dimen/dp20"
                                android:text="无限回放"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp70"
                                android:layout_height="@dimen/dp70"
                                android:src="@mipmap/icon5"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dp24"
                                android:textColor="@color/color_333333"
                                android:layout_marginTop="@dimen/dp20"
                                android:text="学情报告"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/dp70"
                                android:layout_height="@dimen/dp70"
                                android:src="@mipmap/icon6"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/dp24"
                                android:textColor="@color/color_333333"
                                android:layout_marginTop="@dimen/dp20"
                                android:text="在线测试"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp30"
                    android:background="@color/color_f6f6f6"
                    android:layout_marginTop="@dimen/dp50"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp160"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="@dimen/dp12"
                        android:layout_height="@dimen/dp42"
                        android:background="@color/color_FFC400"
                        android:layout_marginLeft="@dimen/dp32" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:text="课程大纲"
                        android:layout_marginLeft="@dimen/dp16"
                        android:textSize="@dimen/dp34"
                        android:textColor="@color/color_333333"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp2"
                    android:background="@color/color_f6f6f6"/>

                <RelativeLayout
                    android:id="@+id/chapter_list_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/chapter_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp32"
                        android:layout_marginBottom="@dimen/dp32">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

</LinearLayout>
