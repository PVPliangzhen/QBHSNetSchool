<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/dp174"
        android:layout_height="@dimen/dp174"
        android:layout_centerInParent="true"
        android:background="@drawable/corner_loading_dialog" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/loading_img"
            android:layout_width="@dimen/dp58"
            android:layout_height="@dimen/dp58"
            android:src="@mipmap/loading_befor" />

        <TextView
            android:id="@+id/loading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:text="正在加载"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp26" />
    </LinearLayout>

</RelativeLayout>