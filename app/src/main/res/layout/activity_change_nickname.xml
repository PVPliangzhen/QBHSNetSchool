<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">

    <include layout="@layout/head_layout"/>

    <RelativeLayout
        android:id="@+id/change_nickname_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:background="#0ff">
        <EditText
            android:id="@+id/change_nickname_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_ffffff"
            android:maxLength="30"
            android:hint="请输入昵称"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp32"
            android:layout_centerVertical="true"
            android:clickable="false"/>
        <ImageView
            android:id="@+id/delete_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp30"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/editext_delete"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e7e7e7"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginTop="@dimen/dp8"
        android:layout_below="@+id/login_pwd"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请设置昵称"
        android:textColor="@color/color_999999"
        android:layout_marginLeft="@dimen/dp30"
        android:textSize="@dimen/dp24"
        android:layout_marginTop="@dimen/dp16"/>
</LinearLayout>
