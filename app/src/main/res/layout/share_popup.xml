<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/share_weixin_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp50">

            <ImageView
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:src="@mipmap/ico_weixin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp25"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/dp32"
                android:text="微信好友"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_pengyouquan_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp50">

            <ImageView
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:src="@mipmap/ico_pengyouquan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp25"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/dp32"
                android:text="微信朋友圈"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_erweima_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp50">

            <ImageView
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:src="@mipmap/ico_erweima"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp25"
                android:textColor="@color/color_333333"
                android:layout_marginTop="@dimen/dp32"
                android:text="二维码分享"
                android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/cancel_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:text="取消"
        android:textSize="@dimen/dp36"
        android:textColor="@color/color_666666"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginBottom="@dimen/dp20"/>

</LinearLayout>
