<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff">

    <RelativeLayout
        android:id="@+id/status_bar_mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_E20000"
        android:visibility="gone">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp120"
        android:layout_below="@+id/status_bar_mask">
        <LinearLayout
            android:id="@+id/page_back"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp120"
            android:gravity="center"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/page_back_img"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:layout_marginLeft="@dimen/dp30"
                android:layout_marginRight="@dimen/dp30"
                android:src="@mipmap/rectangle3"/>
        </LinearLayout>

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp40"
            android:textColor="@color/color_ffffff"
            android:layout_toRightOf="@+id/page_back"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/title_right_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp30"
            android:layout_centerVertical="true"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp32"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/delete_btn"/>
    </RelativeLayout>

</RelativeLayout>
