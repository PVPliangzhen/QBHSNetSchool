<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">

    <include layout="@layout/head_layout"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp40"
        android:textSize="@dimen/dp25"
        android:textColor="@color/color_666666"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:text="为了保证快递能及时送达，建议填写家庭住址或家长的工作单位地址。"
        android:background="@color/color_ffffff"
        style="?android:attr/borderlessButtonStyle"
        android:gravity="start"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32">

        <TextView
            android:id="@+id/receive_goods_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="收货"
            android:textSize="@dimen/dp30"
            android:textColor="@color/color_666666"
            android:gravity="center"/>

        <EditText
            android:id="@+id/receive_goods"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp25"
            android:layout_toRightOf="@+id/receive_goods_txt"
            android:layout_marginLeft="@dimen/dp16"
            android:background="@color/color_ffffff"/>

        <ImageView
            android:id="@+id/receive_goods_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/editext_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp32"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e7e7e7"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:layout_marginTop="@dimen/dp30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:layout_marginTop="@dimen/dp30">

        <TextView
            android:id="@+id/phone_number_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手机号码"
            android:textSize="@dimen/dp30"
            android:textColor="@color/color_666666"
            android:gravity="center"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp25"
            android:layout_toRightOf="@+id/phone_number_txt"
            android:layout_marginLeft="@dimen/dp16"
            android:background="@color/color_ffffff"
            android:inputType="number"/>

        <ImageView
            android:id="@+id/phone_number_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/editext_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp32"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e7e7e7"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:layout_marginTop="@dimen/dp30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:layout_marginTop="@dimen/dp30">

        <TextView
            android:id="@+id/region_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="所在地区"
            android:textSize="@dimen/dp30"
            android:textColor="@color/color_666666"
            android:gravity="center"/>

        <TextView
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp30"
            android:layout_toRightOf="@+id/region_txt"
            android:layout_marginLeft="@dimen/dp16"
            android:background="@color/color_ffffff"
            android:hint="选择地区"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e7e7e7"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:layout_marginTop="@dimen/dp30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:layout_marginTop="@dimen/dp30">

        <TextView
            android:id="@+id/address_detail_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="详细地址"
            android:textSize="@dimen/dp30"
            android:textColor="@color/color_666666"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/address_detail_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/editext_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp32"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/address_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/dp25"
            android:layout_toLeftOf="@+id/address_detail_delete"
            android:layout_toRightOf="@+id/address_detail_txt"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@color/color_ffffff"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e7e7e7"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:layout_marginTop="@dimen/dp30"/>
    
    <TextView
        android:id="@+id/save_address"
        android:layout_width="@dimen/dp230"
        android:layout_height="@dimen/dp60"
        android:text="保存"
        android:textColor="@color/color_ffffff"
        android:gravity="center"
        android:textSize="@dimen/dp30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp50"
        android:background="@mipmap/button_bg"/>

</LinearLayout>
