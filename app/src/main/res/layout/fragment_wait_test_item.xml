<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp10"
    android:paddingBottom="@dimen/dp10">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp265"
        app:cardCornerRadius="@dimen/dp10"
        app:cardElevation="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp32"
        android:layout_marginRight="@dimen/dp32"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginBottom="@dimen/dp10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp45"
            android:layout_marginRight="@dimen/dp45"
            android:layout_marginBottom="@dimen/dp30">
            
            <TextView
                android:id="@+id/test_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp30"
                android:textColor="@color/color_333333"
                android:text="2018-暑 三年级模拟"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/test_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp30"
                android:textColor="@color/color_333333"
                android:layout_below="@+id/test_title"
                android:layout_marginTop="@dimen/dp30"
                android:text="总题数：5题"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/go_to_test"
                android:layout_width="@dimen/dp230"
                android:layout_height="@dimen/dp60"
                android:background="@mipmap/button_bg"
                android:text="参加测试"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dp30"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/test_number"
                android:layout_marginTop="@dimen/dp30"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
