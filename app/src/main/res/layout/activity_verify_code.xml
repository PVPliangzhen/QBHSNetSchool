<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">

    <include
        android:id="@+id/head_layout"
        layout="@layout/head_layout"/>

    <TextView
        android:id="@+id/yanzhengma_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:layout_marginTop="@dimen/dp80"
        android:textSize="@dimen/dp38"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_below="@+id/head_layout"/>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phonenumber"
        android:layout_marginTop="@dimen/dp8"
        android:textSize="@dimen/dp25"
        android:textColor="@color/color_999999"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_below="@+id/yanzhengma_txt"/>

    <TextView
        android:id="@+id/count_timer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:textSize="@dimen/dp25"
        android:textColor="@color/color_999999"
        android:layout_marginLeft="@dimen/dp95"
        android:text="请重新获取验证码"
        android:layout_below="@+id/phone_number"/>

    <RelativeLayout
        android:id="@+id/yanzhengma_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_below="@+id/count_timer_txt">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:background="@color/color_ffffff"
            android:inputType="number"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp60">
                <TextView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/set_pwd_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp38"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_marginTop="@dimen/dp30"
        android:text="设置密码"
        android:layout_below="@+id/yanzhengma_content"/>

    <RelativeLayout
        android:id="@+id/login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:layout_below="@+id/set_pwd_txt"
        android:layout_marginLeft="@dimen/dp95">
        <EditText
            android:id="@+id/pwd_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp95"
            android:background="@color/color_ffffff"/>
        <ImageView
            android:id="@+id/pwd_show_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp95"/>
    </RelativeLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="@dimen/dp560"
        android:layout_height="@dimen/dp75"
        android:text="立即登录"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_pwd"
        android:background="@mipmap/button_bg"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/dp30"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp50"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册遇到问题？"
        android:textColor="@color/color_E20000"
        android:textSize="@dimen/dp22"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="@dimen/dp16"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp22"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp65"
        android:textColor="@color/color_666666"
        android:layout_centerHorizontal="true"
        android:text="注册即表示您同意《华罗庚网校用户协议与隐私条款》"/>

</RelativeLayout>
