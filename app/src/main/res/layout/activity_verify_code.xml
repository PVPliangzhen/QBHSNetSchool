<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">

    <include
        android:id="@+id/head_layout"
        layout="@layout/head_layout"/>

    <TextView
        android:id="@+id/yanzhengma_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:layout_marginTop="@dimen/dp80"
        android:textSize="@dimen/dp38"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_below="@+id/head_layout"/>

    <TextView
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phonenumber"
        android:layout_marginTop="@dimen/dp8"
        android:textSize="@dimen/dp25"
        android:textColor="@color/color_999999"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_below="@+id/yanzhengma_txt"/>

    <TextView
        android:id="@+id/count_timer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:textSize="@dimen/dp25"
        android:textColor="@color/color_999999"
        android:layout_marginLeft="@dimen/dp95"
        android:text="请重新获取验证码"
        android:layout_below="@+id/phone_number"/>

    <RelativeLayout
        android:id="@+id/yanzhengma_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_below="@+id/count_timer_txt">
        <EditText
            android:id="@+id/verify_code_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:background="@color/transparent"
            android:inputType="number"
            android:maxLength="6"
            android:textColor="@color/transparent"
            android:cursorVisible="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp60"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp60">
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp38"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp38"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp38"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp38"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp38"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp30">
                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:gravity="center"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp38"/>
                <View
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp1"
                    android:background="@color/color_999999"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/set_pwd_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp38"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_marginTop="@dimen/dp30"
        android:text="设置密码"
        android:layout_below="@+id/yanzhengma_content"/>

    <RelativeLayout
        android:id="@+id/login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp60"
        android:layout_below="@+id/set_pwd_txt"
        android:layout_marginLeft="@dimen/dp95">
        <EditText
            android:id="@+id/pwd_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp95"
            android:background="@color/color_ffffff"
            android:maxLength="20"
            android:hint="请设置登录密码，不少于6位"
            android:inputType="textPassword"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp32"/>
        <ImageView
            android:id="@+id/pwd_show_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp95"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ico_hide"/>
    </RelativeLayout>

    <View
        android:id="@+id/pwd_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e7e7e7"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_marginRight="@dimen/dp95"
        android:layout_marginTop="@dimen/dp8"
        android:layout_below="@+id/login_pwd"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="@dimen/dp560"
        android:layout_height="@dimen/dp75"
        android:text="立即登录"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/button_bg"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/dp30"
        android:gravity="center"
        android:layout_below="@+id/pwd_line"
        android:layout_marginTop="@dimen/dp60"/>

    <TextView
        android:id="@+id/register_issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册遇到问题？"
        android:textColor="@color/color_E20000"
        android:textSize="@dimen/dp22"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="@dimen/dp24"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/agreement_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp65"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp22"
            android:textColor="@color/color_666666"
            android:text="注册即表示您同意"/>

        <TextView
            android:id="@+id/register_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《华罗庚网校用户协议与隐私条款》"
            android:textColor="@color/color_E20000"
            android:textSize="@dimen/dp22"/>

    </LinearLayout>

</RelativeLayout>
