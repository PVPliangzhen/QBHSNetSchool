<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp360"
    android:gravity="center"
    android:paddingTop="@dimen/dp15"
    android:paddingBottom="@dimen/dp15">
    
    <RelativeLayout
        android:id="@+id/coupon_root_layout"
        android:layout_width="@dimen/dp369"
        android:layout_height="@dimen/dp325"
        android:background="@mipmap/money_b_yellow_line">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp136">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/moneybg2"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/dp95"
                android:paddingTop="@dimen/dp27"
                android:paddingRight="@dimen/dp20"
                android:paddingBottom="@dimen/dp5"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/color_ffffff"/>
                    <TextView
                        android:id="@+id/coupon_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:textColor="@color/color_ffffff"
                        android:textSize="@dimen/dp70"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp188"
            android:layout_marginTop="@dimen/dp136">

            <TextView
                android:id="@+id/coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp41"
                android:layout_marginTop="@dimen/dp25"
                android:layout_centerHorizontal="true"
                android:text="暑期班学员立减500元"
                android:textSize="@dimen/dp30"
                android:textColor="@color/color_333333"
                android:gravity="center"/>
            
            <TextView
                android:id="@+id/coupon_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp33"
                android:text="有效期"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dp22"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp20"
                android:layout_below="@+id/coupon_title"
                android:gravity="center"/>

            <TextView
                android:id="@+id/coupon_use"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp41"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="@dimen/dp30"
                android:text="立即使用"
                android:textColor="@color/color_FFCF00"
                android:layout_below="@+id/coupon_time"
                android:layout_marginTop="@dimen/dp16"/>

            <ImageView
                android:id="@+id/coupon_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/monry_b_yellow"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
