<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp136"
    android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp64"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/dp2"
                android:layout_height="@dimen/dp32"
                android:background="@color/color_c4c4c4"
                android:layout_marginLeft="@dimen/dp31">
            </View>
            
            <ImageView
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:background="@drawable/list_point_bg"
                android:layout_marginLeft="@dimen/dp22"
                android:layout_marginTop="@dimen/dp8"/>

            <View
                android:layout_width="@dimen/dp2"
                android:layout_height="@dimen/dp68"
                android:background="@color/color_c4c4c4"
                android:layout_marginLeft="@dimen/dp31"
                android:layout_marginTop="@dimen/dp8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp136"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp25"
                android:layout_marginTop="@dimen/dp40"/>

            <TextView
                android:id="@+id/chapter_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp25"
                android:layout_marginTop="@dimen/dp20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp136"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chapter_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp25"
                android:layout_marginTop="@dimen/dp40"/>

            <TextView
                android:id="@+id/chapter_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dp25"
                android:layout_marginTop="@dimen/dp20"/>

        </LinearLayout>

</LinearLayout>
