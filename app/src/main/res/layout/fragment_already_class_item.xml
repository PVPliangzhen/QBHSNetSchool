<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e7e7e7"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp30"
        android:layout_marginRight="@dimen/dp30"
        android:layout_marginTop="@dimen/dp50">

        <ImageView
            android:id="@+id/season_img"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:src="@mipmap/summer"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp30"
            android:textColor="@color/color_333333"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/season_img"
            android:layout_marginLeft="@dimen/dp16"
            android:text="课程标题"/>

        <TextView
            android:id="@+id/all_chapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部章节>"
            android:textColor="@color/color_E20000"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dp25"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp62"
        android:layout_marginTop="@dimen/dp40"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp30">

        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:src="@drawable/home_date"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/wait_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp25"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_gravity="center_vertical"
            android:text="home_date"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp62"
        android:layout_marginTop="@dimen/dp40"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp30">

        <ImageView
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:src="@drawable/home_time"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/wait_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp25"
            android:textColor="@color/color_666666"
            android:layout_marginLeft="@dimen/dp16"
            android:layout_gravity="center_vertical"
            android:text="home_time"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp62"
        android:layout_marginTop="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp30">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30"
                android:src="@drawable/home_course"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/wait_course_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp25"
                android:textColor="@color/color_666666"
                android:layout_marginLeft="@dimen/dp16"
                android:layout_gravity="center_vertical"
                android:text="home_course"/>
        </LinearLayout>

        <TextView
            android:id="@+id/course_test"
            android:layout_width="@dimen/dp188"
            android:layout_height="@dimen/dp62"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/dp30"
            android:text="课前测试"
            android:background="@mipmap/btn_blue"
            android:layout_marginRight="@dimen/dp30"
            android:gravity="center"
            android:textColor="@color/color_448CD7"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp34"
        android:layout_marginTop="@dimen/dp58"
        android:background="@color/color_f6f6f6">
    </View>

</LinearLayout>
