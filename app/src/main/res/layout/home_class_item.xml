<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp485"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/dp30"
    android:layout_marginRight="@dimen/dp30"
    android:elevation="@dimen/dp8"
    app:cardCornerRadius="@dimen/dp8"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginBottom="@dimen/dp8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/home_class_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp44"
                    android:layout_marginLeft="@dimen/dp55"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/summer2"/>

                    <TextView
                        android:id="@+id/home_class_title_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp16"
                        android:textSize="@dimen/dp30"
                        android:textColor="@color/color_333333"
                        android:text="第一期"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/home_class_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp30"
                    android:layout_marginLeft="@dimen/dp55"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/dp30"
                    android:text="二升三年级直播培优班"
                    android:layout_below="@+id/home_class_title"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:id="@+id/home_class_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp30"
                    android:layout_below="@+id/home_class_content"
                    android:layout_marginLeft="@dimen/dp55"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:src="@drawable/home_date"/>
                    <TextView
                        android:id="@+id/home_class_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp16"
                        android:textSize="@dimen/dp26"
                        android:textColor="@color/color_666666"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_class_time"
                    android:layout_below="@+id/home_class_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp30"
                    android:layout_marginLeft="@dimen/dp55"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:src="@drawable/home_time"/>
                    <TextView
                        android:id="@+id/home_class_time_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp16"
                        android:textSize="@dimen/dp26"
                        android:textColor="@color/color_666666"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/home_class_course"
                    android:layout_below="@id/home_class_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp55"
                    android:layout_marginTop="@dimen/dp30"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp30"
                        android:src="@drawable/home_course"/>
                    <TextView
                        android:id="@+id/home_class_course_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp16"
                        android:textSize="@dimen/dp26"
                        android:textColor="@color/color_666666"
                        android:maxLines="1"
                        android:ellipsize="end"/>
                </LinearLayout>
                <Button
                    android:id="@+id/teacher_btn"
                    android:layout_below="@+id/home_class_course"
                    android:layout_width="@dimen/dp120"
                    android:layout_height="@dimen/dp50"
                    android:layout_marginTop="@dimen/dp36"
                    android:layout_marginLeft="@dimen/dp55"
                    android:textSize="@dimen/dp22"
                    android:textColor="@color/color_333333"
                    android:background="@color/color_e7e7e7"
                    android:gravity="center"
                    android:text="张永福"/>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/teacher_show"
                android:layout_width="@dimen/dp218"
                android:layout_height="@dimen/dp345"
                android:layout_marginTop="@dimen/dp44"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp16">
                <TextView
                    android:id="@+id/ori_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp22"
                    android:textColor="@color/color_666666"
                    android:text="原价￥800"
                    android:layout_marginLeft="@dimen/dp4"/>
                <TextView
                    android:id="@+id/cur_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp36"
                    android:textColor="@color/color_E20000"
                    android:text="￥99"
                    android:layout_marginLeft="@dimen/dp4"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
