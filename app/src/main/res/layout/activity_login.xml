<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_ffffff">

    <include layout="@layout/head_layout"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:layout_marginTop="@dimen/dp80"
        android:textSize="@dimen/dp38"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="@dimen/dp95"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp95">
        <EditText
            android:id="@+id/account_number_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入账号"
            android:background="@color/color_ffffff"
            android:maxLength="20"
            android:layout_marginTop="@dimen/dp16"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp32"
            android:inputType="number"/>
        <ImageView
            android:id="@+id/account_num_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/editext_delete"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp95"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e7e7e7"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_marginRight="@dimen/dp95"
        android:layout_marginTop="@dimen/dp8"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:layout_marginTop="@dimen/dp40"
        android:textSize="@dimen/dp38"
        android:textColor="@color/color_333333"
        android:layout_marginLeft="@dimen/dp95"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp95">
        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp95"
            android:background="@color/color_ffffff"
            android:maxLength="20"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dp32"/>
        <ImageView
            android:id="@+id/img_pwd_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp95"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ico_hide"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/color_e7e7e7"
        android:layout_marginLeft="@dimen/dp95"
        android:layout_marginRight="@dimen/dp95"
        android:layout_marginTop="@dimen/dp8"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="@dimen/dp560"
        android:layout_height="@dimen/dp75"
        android:background="@mipmap/button_bg"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/dp30"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp60"
        android:layout_gravity="center_horizontal"
        android:text="登 录"/>

    <RelativeLayout
        android:layout_width="@dimen/dp560"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp24"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/to_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_E20000"
            android:text="立即注册"
            android:textSize="@dimen/dp30"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:text="忘记密码"
            android:textSize="@dimen/dp30"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
