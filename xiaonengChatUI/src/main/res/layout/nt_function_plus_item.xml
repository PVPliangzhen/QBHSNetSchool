<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="false"
    android:clickable="false"
    android:focusableInTouchMode="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  >

    <LinearLayout
        android:id="@+id/ll_function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        tools:ignore="UnusedIds">


        <RelativeLayout
            android:id="@+id/rl_messageFunctionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"

            android:gravity="center" >

            <ImageView
                android:id="@+id/messageFunctionBtn"
                android:layout_width="115px"
                tools:src="@drawable/nt_chat_plus"
                android:layout_height="115px"
                android:scaleType="fitCenter"
            />

            <TextView
                android:id="@+id/messageFunctionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/messageFunctionBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:textColor="@color/xn_function_text" />
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>