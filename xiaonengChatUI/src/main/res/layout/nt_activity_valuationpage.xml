<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:overScrollMode="always"
    tools:ignore="UnusedIds">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null" >

        <RelativeLayout
            android:id="@+id/rl_valu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/nt_background_evaluation" >

            <RelativeLayout
                android:id="@+id/rl_satisfid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:id="@+id/rl_valuation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/iv_valuation_close"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/nt_valuation_close" />

                    <TextView
                        android:id="@+id/tv_valuation_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="6dp"
                        android:layout_toStartOf="@id/iv_valuation_close"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/xn_require_evaluation"
                        android:textColor="@color/xn_valuation_title"
                        android:textSize="16sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pj"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@id/rl_valuation_title"
                    android:background="@color/xn_white"
                    android:gravity="center"
                    tools:ignore="UnusedIds">

                    <LinearLayout
                        android:id="@+id/ll_pj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_pj_one"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/nt_valuation_star_light" />

                        <ImageView
                            android:id="@+id/iv_pj_two"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="14dp"
                            android:src="@drawable/nt_valuation_star_light" />

                        <ImageView
                            android:id="@+id/iv_pj_three"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="14dp"
                            android:src="@drawable/nt_valuation_star_light" />

                        <ImageView
                            android:id="@+id/iv_pj_four"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="14dp"
                            android:src="@drawable/nt_valuation_star_light" />

                        <ImageView
                            android:id="@+id/iv_pj_five"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="14dp"
                            android:src="@drawable/nt_valuation_star_black" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_pj_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_pj"
                        android:layout_marginTop="16dp"
                        android:ellipsize="end"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="满意"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_satisfid" >

                <RelativeLayout
                    android:id="@+id/ed_rela3"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/iv_valuation_close1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/nt_valuation_close" />

                    <TextView
                        android:id="@+id/tv_solution_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="12dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_toStartOf="@id/iv_valuation_close1"
                        android:layout_alignParentStart="true"
                        android:text="@string/xn_ad_questionstatus"
                        android:textColor="@color/xn_valuation_title"
                        android:textSize="16sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ed_rela"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@id/ed_rela3"
                    android:background="@color/xn_white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UnusedIds">

                    <LinearLayout
                        android:id="@+id/ll_valuation_solved"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_solved"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/nt_valuation_solved_black" />

                        <TextView
                            android:id="@+id/tv_solved"
                            android:layout_width="68dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/xn_val_done"
                            android:textColor="@color/xn_valuation_title"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_valuation_solving"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/ll_valuation_solved"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_solving"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/nt_valuation_solving_black" />

                        <TextView
                            android:id="@+id/tv_solving"
                            android:layout_width="68dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/xn_val_going"
                            android:textColor="@color/xn_valuation_title"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_valuation_unsolve"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="4dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/ll_valuation_solving"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_unsolve"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/nt_valuation_unsolve_black" />

                        <TextView
                            android:id="@+id/tv_unsolve"
                            android:layout_width="68dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="4dp"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/xn_val_no"
                            android:textColor="@color/xn_valuation_title"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_reguest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_solution" >

                  <ImageView
                    android:id="@+id/iv_valuation_close2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="14dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/nt_valuation_close" />
                <TextView
                    android:id="@+id/tv_reguest"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd ="10dp"
                    android:layout_marginTop="14dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_toStartOf="@id/iv_valuation_close2"
                    android:text="@string/xn_adviseandfeedback"
                    android:textColor="@color/xn_valuation_title"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_support"
                    android:layout_width="fill_parent"
                    android:layout_height="120dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/tv_reguest"
                    android:layout_marginTop="6dp"
                    android:background="@color/xn_white"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="@string/xn_valuation_suggestion_hint"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:textColorHint="@color/xn_valuation_hint"
                    android:textSize="16sp" >
                </EditText>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/rl_reguest" >

                <TextView
                    android:id="@+id/tv_valuation_submit"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_alignStart="@+id/view_val01"
                    android:layout_weight="1"
                    android:background="@drawable/nt_chat_valuation_submit_text_style"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/xn_submit_valuation"
                    android:textColor="@color/xn_white"
                    android:textSize="20sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>