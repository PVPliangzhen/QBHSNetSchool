<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppTheme" parent="android:Theme.Material.Light" />
    
    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="chat_text_date_style">
        <item name="android:paddingTop">2px</item>
        <item name="android:paddingBottom">2px</item>
        <item name="android:textColor">@color/xn_sdk_sendtime_color</item>
        <item name="android:textSize">22px</item>
        <item name="android:paddingLeft">12px</item>
        <item name="android:paddingRight">12px</item>
        <item name="android:background">@drawable/nt_chat_send_time_bg</item>
    </style>
    
    <style name="MyDialogTopRight" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Anim_scale</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="Anim_scale" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/nt_scale_in</item>
        <item name="android:activityOpenExitAnimation">@anim/nt_scale_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/nt_scale_in</item>
        <item name="android:activityCloseExitAnimation">@anim/nt_scale_out</item>
    </style>
    <style name="translucent"  parent="ChatActivityTheme">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="valuationdialog" parent="ChatActivityTheme">
        <!-- 去黑边 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置是否可滑动 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 设置是否透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景 -->
        <item name="android:background">@null</item>
        <!-- 窗口背景 -->
        <item name="android:windowBackground">@drawable/nt_chat_valuation_shape</item>
        <!-- 是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 点击空白部分activity不消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    
    <style name="XNDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/nt_dialog_custom_shape</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>
    <!--全屏 dialog-->
    <style name="XNFullDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/translucent_background</item>
    </style>
    
    <style name="XNAppTheme" parent="XNAppBaseTheme" />
    
    <style name="XNAppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>
    
    <style name="BlueBarTheme" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="ChatActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources>